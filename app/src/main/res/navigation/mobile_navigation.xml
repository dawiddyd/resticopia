    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_folders">

    <fragment
        android:id="@+id/navigation_folders"
        android:name="org.dydlakcloud.resticopia.ui.folders.FoldersFragment"
        android:label="@string/text_folders"
        tools:layout="@layout/fragment_repos" />

    <fragment
        android:id="@+id/navigation_repos"
        android:name="org.dydlakcloud.resticopia.ui.repos.ReposFragment"
        android:label="@string/text_repos"
        tools:layout="@layout/fragment_folders" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="org.dydlakcloud.resticopia.ui.settings.SettingsFragment"
        android:label="@string/text_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="org.dydlakcloud.resticopia.ui.about.AboutFragment"
        android:label="@string/text_about"
