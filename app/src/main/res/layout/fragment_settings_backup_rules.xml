<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Backup Constraints Title -->
        <TextView
            android:id="@+id/text_constraints_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_backup_constraints_title"
            android:textAppearance="@style/TextAppearance.App.Body17"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Require Charging Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_require_charging"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/settings_backup_require_charging"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_constraints_title" />

        <TextView
            android:id="@+id/text_charging_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/settings_backup_require_charging_description"
            android:textAppearance="@style/TextAppearance.App.CaptionReg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_require_charging" />

        <!-- Allow Cellular Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_allow_cellular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/settings_backup_allow_cellular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_charging_description" />

        <TextView
            android:id="@+id/text_cellular_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/settings_backup_allow_cellular_description"
            android:textAppearance="@style/TextAppearance.App.CaptionReg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_allow_cellular" />

        <!-- View Queued Backups Button -->
        <Button
            android:id="@+id/button_view_queued_backups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/settings_view_queued_backups"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_main"
            app:cornerRadius="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_cellular_description" />

        <!-- Ignore Patterns Section -->
        <TextView
            android:id="@+id/text_ignore_patterns_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/settings_ignore_patterns_title"
            android:textAppearance="@style/TextAppearance.App.Body17"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_view_queued_backups" />

        <TextView
            android:id="@+id/text_ignore_patterns_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_ignore_patterns_description"
            android:textAppearance="@style/TextAppearance.App.CaptionReg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ignore_patterns_title" />

        <TextView
            android:id="@+id/text_ignore_patterns_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/settings_ignore_patterns_summary_not_configured"
            android:textAppearance="@style/TextAppearance.App.CaptionReg"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ignore_patterns_description" />

        <Button
            android:id="@+id/button_configure_ignore_patterns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/settings_ignore_patterns_button"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_main"
            app:cornerRadius="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ignore_patterns_status" />

        <TextView
            android:id="@+id/text_ignore_patterns_instructions_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/settings_ignore_patterns_instructions_title"
            android:textAppearance="@style/TextAppearance.App.Body15"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_configure_ignore_patterns" />

        <TextView
            android:id="@+id/text_ignore_patterns_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:text="@string/settings_ignore_patterns_instructions"
            android:textAppearance="@style/TextAppearance.App.CaptionReg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ignore_patterns_instructions_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

