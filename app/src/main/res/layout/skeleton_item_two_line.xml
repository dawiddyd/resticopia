<?xml version="1.0" encoding="utf-8"?>
<!-- Generic skeleton loader for two-line list items (folders, repos) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:minHeight="64dp">

    <!-- Icon placeholder -->
    <View
        android:id="@+id/skeleton_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/skeleton_shimmer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/skeleton_icon"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- First line -->
        <View
            android:id="@+id/skeleton_line1"
            android:layout_width="160dp"
            android:layout_height="17dp"
            android:background="@drawable/skeleton_shimmer" />

        <!-- Second line -->
        <View
            android:id="@+id/skeleton_line2"
            android:layout_width="200dp"
            android:layout_height="13dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/skeleton_shimmer" />

    </LinearLayout>

</RelativeLayout>

