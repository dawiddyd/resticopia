<?xml version="1.0" encoding="utf-8"?>
<!-- Skeleton loader for two-line snapshot list items -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:minHeight="64dp">

    <!-- First line - shorter (folder name / snapshot hash) -->
    <View
        android:id="@+id/skeleton_line1"
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:background="@drawable/skeleton_shimmer" />

    <!-- Second line - longer (date and details) -->
    <View
        android:id="@+id/skeleton_line2"
        android:layout_width="220dp"
        android:layout_height="13dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/skeleton_shimmer" />

</LinearLayout>

